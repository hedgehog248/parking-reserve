<div class="main">
  <h2 class="page-title"><%= t('.sign_up') %></h2>

  <div class="form-wrapper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field required">
        <%= f.label :building_num %><br />
        <%= f.select :building_num, [["---", ""], ["10号棟", 10], ["11号棟", 11], ["12号棟", 12], ["13号棟", 13], ["14号棟", 14], ["15号棟", 15], ["16号棟", 16], ["17号棟", 17]] %> 
      </div>

      <div class="field required">
        <%= f.label :room_num %><br />
        <%= f.select :room_num, [["---", ""]] %>
      </div>

      <div class="field required">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class="field required">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </div>
      <div class="field required">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field required">
        <%= f.label :password %>
        <em>(6文字以上, 英字と数字の両方を含めてください)</em>
        <br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field required">
        <%= f.label :password_confirmation %> 上記パスワードをもう一度入力してください<br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit t('.sign_up') %>
      </div>
    <% end %>
    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>