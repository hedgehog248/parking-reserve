<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="main">
  <h2 class="page-title"><%= t('.sign_up') %></h2>

  <div class="form-wrapper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="build-num">
        <div class="field">
          <%= f.label :building_num, class: "required" %><br />
          <%= f.select :building_num, [["---", ""], ["10号棟", 10], ["11号棟", 11], ["12号棟", 12], ["13号棟", 13], ["14号棟", 14], ["15号棟", 15], ["16号棟", 16], ["17号棟", 17]] %> 
        </div>
        
        <div class="field">
          <%= f.label :room_num, class: "required" %><br />
          <%= f.select :room_num, [["---", ""]] %>
        </div>
      </div>

      <div class="field">
        <%= f.label :last_name, class: "required" %><br />
        <%= f.text_field :last_name, class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :first_name, class: "required" %><br />
        <%= f.text_field :first_name, class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :email, class: "required" %><br />
        <%= f.email_field :email, autocomplete: "email", class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "required" %>
        <em>(6文字以上, 英字と数字の両方を含めてください)</em><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "required" %> 
        <em>(上記パスワードをもう一度入力してください)<em><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field" %>
      </div>

      <div class="actions">
        <%= f.submit t('.sign_up'), class: "white-btn btn" %>
      </div>
    <% end %>
    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>